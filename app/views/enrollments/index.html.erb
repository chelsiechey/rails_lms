<h1><%= @course.name %> Enrollments</h1>
<%= link_to 'Add Enrollment', new_course_enrollment_path(@course) %>
<br />

<h2>Teacher</h2>
<ul>
  <% @teachers.each do |t| %>
    <li>
      <%= t.user.full_name %>
      <br />
      <%= button_to 'Remove', course_enrollment_path(@course, t), method: :delete %>
    </li>
  <% end %>
</ul>
<h2>TA</h2>
<ul>
  <% @tas.each do |t| %>
    <li>
      <%= t.user.full_name %>
      <br />
      <%= button_to 'Remove', course_enrollment_path(@course, t), method: :delete %>
    </li>
  <% end %>
</ul>
<h2>Student</h2>
<ul>
  <% @students.each do |s| %>
    <li>
      <%= s.user.full_name %>
      <br />
      <%= button_to 'Remove', course_enrollment_path(@course, s), method: :delete %>
    </li>
  <% end %>
</ul>
